<view class="edit-goods"><cu-custom class="seat" vue-id="1" bgColor="bg-white" isBack="{{true}}" bind:__l="__l" vue-slots="{{['backText','content']}}"><view slot="backText">返回</view><view slot="content">创建商品</view></cu-custom><view class="cu-form-group margin-top"><textarea maxlength="-1" placeholder="请输入商品描述,如:(尺寸,颜色,货号等..)" data-event-opts="{{[['input',[['__set_model',['','info','$event',[]]]]]]}}" value="{{info}}" bindinput="__e"></textarea></view><view class="cu-form-group"><block wx:if="{{isCanPrivate==1}}"><view class="grid margin-top-sm col-4 grid-square flex-sub"><block wx:for="{{imgList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="bg-img"><image src="{{imgList[index]}}" mode="aspectFill" data-event-opts="{{[['tap',[['ViewImage',[index]]]]]}}" bindtap="__e"></image><view class="cu-tag bg-red" data-index="{{index}}" data-event-opts="{{[['tap',[['DelImg',[index]]]]]}}" catchtap="__e"><text class="cuIcon-close  bg-red"></text></view></view></block><block wx:if="{{imgList.length<8}}"><view data-event-opts="{{[['tap',[['ChooseImage',['$event']]]]]}}" class="solids" bindtap="__e"><text class="cuIcon-cameraadd"></text></view></block></view></block><block wx:else><view class="grid margin-top-sm col-4 grid-square flex-sub"><block wx:for="{{videoList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="bg-img"><video src="{{videoList[index]}}"></video><view data-event-opts="{{[['tap',[['DelVideo',['$event']]]]]}}" class="cuIcon-close bg-red" catchtap="__e"></view></view></block><block wx:if="{{videoList.length<1}}"><view data-event-opts="{{[['tap',[['ChooseImage',['$event']]]]]}}" class="solids" bindtap="__e"><text class="cuIcon-cameraadd"></text></view></block></view></block></view><view class="my-btn"><button data-event-opts="{{[['tap',[['upGoods',['$event']]]]]}}" class="cu-btn bg-green lg shadow" style="background:#FB95AD;" bindtap="__e">保存</button></view><video-play vue-id="2" video="{{video}}" show="{{show}}" data-event-opts="{{[['^hide',[['hideVideo']]]]}}" bind:hide="__e" bind:__l="__l"></video-play></view>