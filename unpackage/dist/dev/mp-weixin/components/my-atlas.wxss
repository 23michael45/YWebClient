.my-atlas {
  padding: 17rpx;
}
.my-atlas .atlas-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
}
.my-atlas .atlas-box .item {
  width: 175rpx;
  height: 240rpx;
  margin-right: 6rpx;
  margin-bottom: 6rpx;
  position: relative;
  border: 1px solid #eee;
}
.my-atlas .atlas-box .item:nth-child(4n) {
  margin-right: 0;
}
.my-atlas .atlas-box .item image {
  width: 100%;
  height: 100%;
}
.my-atlas .atlas-box .item .num {
  color: #fff;
  position: absolute;
  bottom: 2rpx;
  right: 4rpx;
}
.my-atlas .atlas-box .item .video {
  width: 100%;
  height: 100%;
}

